---
import Color from "./svelte/color.svelte";
import Musica from "./preact/musica.jsx";
import Lenguaje from "./astro/lenguaje.astro";
import Logofoto from "./preact/logofoto.jsx";
---

<nav
  class="z-50 select-none sticky top-0.5 px-2 sm:px-4 md:px-6 py-3 mx-1 sm:mx-5 md:mx-10 mt-5 sm:mt-4 lg:mt-6
         bg-background1-light/50 dark:bg-background1-dark/50 backdrop-blur-lg shadow-lg rounded-xl
         flex items-center justify-between transition-all duration-300 ease-in-out"
  aria-label="Main navigation"
>
  <span
    class="grid grid-flow-col gap-1 text-txt-light dark:text-txt-dark font-medium ml-4 hover:text-primary focus:ring focus:ring-primary/50"
  >
    <span class="hidden sm:inline">Dot</span>
    <span class="inline sm:hidden">.</span>
    <Logofoto client:load />
  </span>

  <div class="grid grid-flow-col gap-4">
    <Lenguaje />
    <Musica client:load />
    <Color client:load />
  </div>
</nav>
